generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model user {
  user_id             Int       @id @default(autoincrement())
  nama                String    @db.VarChar(255)
  nip                 String    @unique
  email               String    @db.VarChar(255)
  jabatan             String    @db.VarChar(100)
  role                String    @db.VarChar(50)
  nama_opd            String    @db.VarChar(255)
  password            String?
  is_active           Boolean
  registered_at       DateTime?
  usulan              usulan[]
}

model usulan {
  usulan_id           Int       @id @default(autoincrement())
  user_id             Int
  user                user      @relation(fields: [user_id], references: [user_id])
  jenis_usulan        String    @db.VarChar(100)
  tanggal_pengajuan   DateTime  @db.Date
  dokumenSyarat       dokumenSyarat[]
  riwayatStatus       riwayatStatus[]
}

model dokumenSyarat {
  dok_id              Int       @id @default(autoincrement())
  usulan_id           Int       @unique
  nama_file           String    @db.VarChar(255)
  path_file           String    @db.VarChar(255)
  status_verifikasi   String    @db.VarChar(50)
  usulan              usulan    @relation(fields: [usulan_id], references: [usulan_id])
}

model persyaratanDokumen {
  persyaratan_id      Int       @id @default(autoincrement())
  jenis_usulan        String    @unique @db.VarChar(10)
  deskripsi           String    @db.Text
  updated_at          DateTime  @updatedAt
}

model riwayatStatus {
  riwayat_id          Int       @id @default(autoincrement())
  usulan_id           Int
  status              String    @db.VarChar(50)
  catatan             String    @db.VarChar(255)
  tanggal_perubahan   DateTime  @db.Date
  usulan              usulan    @relation(fields: [usulan_id], references: [usulan_id])
}